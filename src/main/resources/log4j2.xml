<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36}.%M:%L - %msg%n
        </Property>

        <Property name="LOG_DIR">log</Property>
    </Properties>

    <Appenders>

        <RollingFile name="FileAppender"
                     fileName="${LOG_DIR}/log-current.log"
                     filePattern="${LOG_DIR}/log-%d{yyyy-MM-dd_HH-mm-ss_SSS}.log">

            <PatternLayout pattern="${LOG_PATTERN}"/>

            <Policies>
                <SizeBasedTriggeringPolicy interval="10MB"/>
            </Policies>

        </RollingFile>

        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

    </Appenders>

    <Loggers>

        <!-- Your application logs -->
        <Root level="trace">
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Root>

    </Loggers>

</Configuration>